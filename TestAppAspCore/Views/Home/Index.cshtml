@model IndexBookViewModel
@{
    ViewData["Title"] = "Список книг";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_MenuPartialView")
<div class="container body-content col-10">
    <br />
    <form asp-controller="Home" asp-action="Index" asp-route-page="1" method="get">
        <h2>Фильтр</h2>
        <div class="form-inline form-group">
            <label for="searchExpr" class="control-label"></label>
            <input name="searchExpr" id="tbSearchExpr" type="text" class="form-control searchTextbox" value="@Model.PageViewModel.SearchExpr" />
            <button id="btnSearch" type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
        </div>
    </form>

    <h2>Список книг</h2>
    <table class="table-condensed">
        <tr>
            <td>Название</td>
            <td>Автор</td>
            <td>Жанр</td>
            <td>Дата создания</td>
            <td>Действия</td>
        </tr>
        @foreach (var book in Model.Books)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.GenreTitle</td>
                <td>@book.DateCreating.Year</td>
                <td>
                    <a asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-info" style="padding-right:10px;">Изменить</a>
                    <a asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </table>
    <br />
    <page-link page-controller="Home" page-action="Index" page-model="@Model.PageViewModel"></page-link>
    <button id="createBook" class="btn btn-success">Создание книги</button>
    <br /><br />
</div>
@section Footer {
    <script src="~/js/Basic.js" asp-append-version="true"></script>
}