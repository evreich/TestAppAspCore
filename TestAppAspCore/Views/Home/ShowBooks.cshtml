@model IEnumerable<TestAppAspCore.ViewModels.BookViewModel>
@{
    ViewData["Title"] = "Список книг";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h2>Список книг</h2>
    <table class="table-condensed">
        <tr>
            <td>Название</td>
            <td>Автор</td>
            <td>Жанр</td>
            <td>Дата создания</td>
            <td></td>
            <td></td>
        </tr>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.GenreTitle</td>
                <td>@book.DateCreating.Year</td>
                <td><a asp-controller="Book" asp-action="Edit" asp-route-id="@book.Id">Изменить</a></td>
                <td><a asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id">Удалить</a></td>
            </tr>
        }
    </table>
    <br />
    <button id="createBook" class="btn btn-primary">Создание книги</button>
    
</div>
@section Footer {
    <script src="~/js/Basic.js" asp-append-version="true"></script>
}