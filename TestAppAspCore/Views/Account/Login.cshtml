@model LoginViewModel
@{
    ViewData["Title"] = "Вход";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">

    <div class="row">
        <div class="offset-2 col-7">
            <br />
            <h2>Вход</h2>
            <form method="post" asp-controller="Account" asp-action="Login">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label><br />
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label><br />
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RememberMe" class="control-label"></label>
                    <input asp-for="RememberMe" />
                </div>
                <a class="btn btn-info  " asp-controller="Account" asp-action="Register">Регистрация</a>
                <button type="submit" class="btn btn-success float-right">Войти</button>
            </form>
        </div>
    </div>
</div>
@section Footer{
    @Html.Partial("_ValidationScriptPartialView")
}