@model TestAppAspCore.Models.Genre
@{
    ViewData["Title"] = "Создать жанр";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <br />
    <form asp-controller="Genre" asp-action="Create" asp-antiforgery="true" method="post">
        <div class="container">
            <div class="row">
                <div class="offset-2 col-7">
                    <h2>Создание жанра</h2>
                    <div class="validation" asp-validation-summary="ModelOnly" />
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label><br />
                        <input type="text" asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <input type="submit" value="Создать" class="btn btn-lg" />
                    <br /><br />
                    <a asp-controller="Home" asp-action="ShowGenres">Назад</a>
                </div>
            </div>
        </div>
    </form>
</div>
@section Footer{
    @Html.Partial("_ValidationScriptPartialView")
}
