@model TestAppAspCore.ViewModels.ActionBooksPagesViewModel
@{
    ViewData["Title"] = "Изменить книгу";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currBook = Model.Book;
}

<div>
    <h2>Изменение книги</h2>

    <form asp-controller="Book" asp-action="Edit" asp-antiforgery="true" method="post">
        <div class="validation" asp-validation-summary="ModelOnly" />
        <input type="hidden" asp-for="Book.Id" />
        <div>
            <label asp-for="Book.Title"></label><br />
            <input type="text" asp-for="Book.Title" />
            <span asp-validation-for="Book.Title" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Book.Author"></label><br />
            <input type="text" asp-for="Book.Author" />
            <span asp-validation-for="Book.Author" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Book.GenreId"></label><br />
            <select asp-for="Book.GenreId" asp-items="Model.Genres">
                <option selected="selected" value="">Выберите жанр</option>
            </select>
            <span asp-validation-for="Book.GenreId" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Book.DateCreating"></label><br />
            <input type="date" asp-for="Book.DateCreating" />
            <span asp-validation-for="Book.DateCreating" class="text-danger"></span>
        </div>

        <input type="submit" value="Изменить" />
        <br />
        <a asp-controller="Home" asp-action="ShowBooks">Назад</a>
    </form>
</div>
@section Footer{
    @Html.Partial("_ValidationScriptPartialView")
}