@model Order
@{
    ViewData["Title"] = "Оформление заказа";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br />
    <form asp-area="Market" asp-controller="Order" asp-action="Checkout" asp-antiforgery="true" method="post">
        <div class="container">
            <div class="row">
                <div class="offset-2 col-7">
                    <h2>Заказ</h2>
                    <h5>Укажите местоположение для того, чтобы мы могли верно доставить Ваш заказ!</h5>
                    <div class="validation" asp-validation-summary="ModelOnly" />
                    <div class="form-group">
                        <label asp-for="Country" class="control-label"></label><br />
                        <input type="text" asp-for="Country" class="form-control" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="State" class="control-label"></label><br />
                        <input type="text" asp-for="State" class="form-control" />
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="City" class="control-label"></label><br />
                        <input type="text" asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Street" class="control-label"></label><br />
                        <input type="text" asp-for="Street" class="form-control" />
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="HomeNumber" class="control-label"></label><br />
                        <input type="number" max="500" min="1" asp-for="HomeNumber" class="form-control" />
                        <span asp-validation-for="HomeNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PostIndex" class="control-label"></label><br />
                        <input type="text" asp-for="PostIndex" class="form-control" />
                        <span asp-validation-for="PostIndex" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateReturn" class="control-label"></label><br />
                        <input type="date" asp-for="DateReturn" class="form-control" />
                        <span asp-validation-for="DateReturn" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GiftWrap" class="control-label"></label><br />
                        <input type="checkbox" asp-for="GiftWrap" class="ml-1" style="transform: scale(1.5);" />
                        <br />
                    </div>

                    <a class="btn btn-danger" asp-area="Market" asp-controller="Home" asp-action="ShowBooks">Назад</a>
                    <input type="submit" value="Оформить" class="btn btn-success float-right" />

                </div>
            </div>
        </div>
    </form>
</div>

@section Footer{
    @Html.Partial("_ValidationScriptPartialView")
}

