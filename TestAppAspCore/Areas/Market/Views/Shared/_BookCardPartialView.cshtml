@model BookViewModel

<div id="@Model.Id" class="col-sm-6 col-lg-4 col-xl-3 p-3">
    <div class="card">
        <div class="card-header">
            <h4>
                @Model.Title
                <span class="badge badge-pill badge-primary float-right">
                    <small name="countBook">@Model.Count</small>
                </span>
            </h4>
        </div>
        <div class="card-body">
            <h5 class="card-title">@Model.Author</h5>
            <div>
                <div class="card-subtitle text-muted mb-2">
                    @Model.GenreTitle
                </div>
                <div class="card-subtitle text-muted">
                    @Model.DateCreating.Year
                </div>

                <form asp-area="Market" asp-action="AddToCart" asp-controller="Cart"
                      data-ajax="true" data-ajax-method="POST"
                      data-ajax-success="onSuccessAddBook"
                      data-ajax-failure="onFailedAddBook" class="float-right">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                    <span class="card-text p-1">
                        <button @(Model.Count <= 0 ? "disabled=\"disabled\"" : string.Empty)
                                type="submit" 
                                name="addBookInCart" 
                                class="btn btn-success btn-sm pull-right float-right">
                            Взять
                        </button>
                    </span>
                </form>
            </div>
        </div>
    </div>
</div>